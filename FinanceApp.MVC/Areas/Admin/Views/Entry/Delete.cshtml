@using FinanceApp.Entities.Concrete;
@model Entry
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<div class="card">
    <div class="card-header">
        <h3>Are you sure to delete this entry ?</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="card-body">
        <form asp-action="Delete" method="post">

            @*// Burasi Onemli. Unutulursa delete islemi yalan olur.*@
            <input type="hidden" asp-for="@Model.Id" />
            <input type="hidden" asp-for="@Model.AppUserId" />
            <input type="hidden" asp-for="@Model.Categories" />
            <input type="hidden" asp-for="@Model.User" />
            
            <div class="mb-3">
                <label asp-for="@Model.Description">Entry Description</label>
                <input class="form-control" asp-for="@Model.Description" value="@Model.Description">

            </div>
            <div class="mb-3">
                <label asp-for="@Model.Amount">Entry Amount </label>
                <input class="form-control" asp-for="@Model.Amount" value="@Model.Amount">

            </div>
            <div class="mb-3">
                <label asp-for="@Model.Type">Entry Type </label>
                <select class="form-select" asp-for="@Model.Type">
                    <option selected>Bir tip seçiniz</option>
                    <option value="1">Giriş</option>
                    <option value="2">Çıkış</option>
                </select>
            </div> <div class="mb-3">
                <label asp-for="@Model.TypeMoney">Entry Amount </label>
                <select class="form-select" asp-for="@Model.TypeMoney">
                    <option selected>Bir ödeme şekli seçiniz</option>
                    <option value="1">Nakit</option>
                    <option value="2">Kredi Kartı</option>
                </select>

            </div>
            <div class="mb-3">
                <label asp-for="@Model.CategoryIds">Entry Categories </label>
                <input class="form-control" asp-for="@Model.CategoryIds" value="@Model.CategoryIds">

            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Delete</button>
            </div>
        </form>
    </div>